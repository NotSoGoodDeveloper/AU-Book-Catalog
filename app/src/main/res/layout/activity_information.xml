<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zero.zd.aubookcatalog.InformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView"
                android:src="@drawable/au_logo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/au_logo_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nfo_title_description"
                android:id="@+id/textViewNfoTitle"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_above="@+id/textViewNfoDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nfo_behind"
                android:id="@+id/textViewNfoBehind"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textViewNfoDescription"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_marginBottom="30dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imgYolly"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textViewNfoBehind"
                android:src="@drawable/nfo_img_yolly"
                android:contentDescription="@string/nfo_img_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/nfo_yolly"
                android:id="@+id/textViewNfoYolly"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imgYolly" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/nfo_docu"
                android:id="@+id/textViewNfoYollyInfo"
                android:layout_below="@+id/textViewNfoYolly"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imgAaron"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textViewNfoYollyInfo"
                android:src="@drawable/nfo_img_aaron"
                android:contentDescription="@string/nfo_img_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/nfo_aaron"
                android:id="@+id/textViewNfoAaron"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imgAaron" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/nfo_docu"
                android:id="@+id/textViewNfoAaronInfo"
                android:layout_below="@+id/textViewNfoAaron"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imgZaerald"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textViewNfoAaronInfo"
                android:src="@drawable/info_profile_dummy"
                android:contentDescription="@string/nfo_img_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/nfo_zae"
                android:id="@+id/textViewNfoZaerald"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imgZaerald" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/nfo_prog"
                android:id="@+id/textViewNfoZaeraldInfo"
                android:layout_below="@+id/textViewNfoZaerald"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nfo_description"
                android:id="@+id/textViewNfoDescription"
                android:layout_marginTop="39dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
